<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard" x:Class="timesheet.Views.PageACompiler" Title="COMPILER">

    <StackLayout Margin="20" VerticalOptions="CenterAndExpand">
        <Label Text="Date" />
        <DatePicker Format="yyyy.MM.dd" Date="{x:Binding Date}" MinimumDate="2010.01.01" HeightRequest="45"/>
        <Label Text="Worked hours" />
        <Entry Text="{Binding Hours}" Placeholder="0" PlaceholderColor="#910C07" HeightRequest="45" />
        <Label Text="Description" />
        <Editor Text="{Binding Description}" HeightRequest="60" MaxLength="120" />
        
        <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" Margin="10,0,10,0">
            <Button Text="Save" Clicked="OnSaveClicked" HorizontalOptions="StartAndExpand" BackgroundColor="#2D8183" TextColor="White" />
            <Button Text="Delete" Clicked="OnDeleteClicked" HorizontalOptions="CenterAndExpand" BackgroundColor="#2D8183" TextColor="White" />
            <Button Text="Cancel" Clicked="OnCancelClicked" HorizontalOptions="EndAndExpand" BackgroundColor="#2D8183" TextColor="White" />
        </StackLayout>

        <Button Text="Speak" Clicked="OnSpeakClicked" Margin="130,20,130,0" BackgroundColor="#2D8183" TextColor="White" />
    </StackLayout>

</ContentPage>