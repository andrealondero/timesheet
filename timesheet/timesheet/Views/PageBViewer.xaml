    <ListView x:Name="listView" Margin="20" ItemSelected="OnListItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Margin="20,0,0,0" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                        <Label Text="{Binding Date}" VerticalOptions="Center" HorizontalOptions="StartAndExpand" />
                        <Label Text="{Binding Desrciption}" VerticalTextAlignment="Center" HorizontalOptions="StartAndExpand" />
                        <Label Text="{Binding Hours}" VerticalOptions="Center" HorizontalOptions="StartAndExpand" />
                        <Image Source="check.png" HorizontalOptions="End" IsVisible="{Binding Status}" />
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    
