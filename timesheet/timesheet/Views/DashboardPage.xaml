<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="timesheet.Views.DashBoardPage" Title="DASHBOARD">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout" Clicked="OnLogoutButtonClicked" />
    </ContentPage.ToolbarItems>
    
    <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" Margin="80,20,80,20">
        <Button Text="TIMESHEET COMPILER" Clicked="OnItemAdded" BackgroundColor="#2D8183" TextColor="White" Margin="0,0,0,20" />
        <Button Text="TIMESHEET VIEWER" Clicked="ViewerButton" BackgroundColor="#2D8183" TextColor="White" Margin="0,0,0,20" />
        <Button Text="TIMSHEET CONFIRMATION" Clicked="ConfirmationButton" BackgroundColor="#2D8183" TextColor="White" />
    </StackLayout>

</ContentPage>