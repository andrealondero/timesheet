<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="timesheet.Views.DashBoardPage" Title="DASHBOARD">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout" Clicked="OnLogoutButtonClicked" />
    </ContentPage.ToolbarItems>
    
    <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand">
        <Button Text="TIMESHEET COMPILER" Clicked="OnItemAdded" />
        <Button Text="TIMESHEET VIEWER" Clicked="ViewerButton" />
        <Button Text="TIMSHEET CONFIRMATION" Clicked="ConfirmationButton" />
    </StackLayout>

</ContentPage>