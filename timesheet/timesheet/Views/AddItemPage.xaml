<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="timesheet.Views.AddItemPage"
             Title="NEW TIMESHEET">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancel" Clicked="OnCancelClicked" />
        <ToolbarItem Text="Save" Clicked="OnSaveClicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Date" FontSize="Medium" />
            <DatePicker x:Name="datepicker" Date="{Binding Item.Date}" Format="yyyy.MM.dd" HeightRequest="45" FontSize="Small" Margin="0" />
            <Label Text="Worked Hours" FontSize="Medium" />
            <Editor x:Name="hourseditor" Text="{Binding Item.Hours}" Placeholder="0" PlaceholderColor="#910C07" HeightRequest="45" FontSize="Small" Margin="0" />
            <Label Text="Description" FontSize="Medium" />
            <Editor x:Name="descriptioneditor" Text="{Binding Item.Description}" Placeholder="your activities here" HeightRequest="100" MaxLength="120" FontSize="Small" Margin="0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>